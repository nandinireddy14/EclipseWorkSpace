<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

	<session-factory>
		<property name="connection.driver_class">
			org.postgresql.Driver
		</property>

		<property name="connection.url">
			jdbc:postgresql://localhost:5432/myhiber
		</property>

		<property name="connection.username">
			postgres
		</property>

		<property name="connection.password">
			nandini14
		</property>

		<property name="dialect">
			org.hibernate.dialect.PostgreSQLDialect
		</property>

		<property name="hbm2ddl.auto">
			update
		</property>

		<property name="show_sql">
			true
		</property>
		<property name="format_sql">
			true
		</property>
		<property name="cache.use_second_level_cache">
			true
		</property>
		<property name="cache.region.factory_class">
			org.hibernate.cache.ehcache.internal.EhcacheRegionFactory
		</property>

		<mapping class="cgginterns.hibernate.Student"></mapping>
		<mapping class="cgginterns.hibernate.Address" />
		<!-- <mapping class="cgginterns.hibernate.map.Question"></mapping> <mapping 
			class="cgginterns.hibernate.map.Answer"></mapping> <mapping class="cgginterns.hibernate.map1.Question"></mapping> 
			<mapping class="cgginterns.hibernate.map1.Answer"></mapping> -->
		<mapping class="cgginterns.hibernate.map1.Brand"></mapping>
		<mapping class="cgginterns.hibernate.map1.Product"></mapping>
		<!-- <mapping class="cgginterns.hibernate.map2.Student"></mapping> <mapping 
			class="cgginterns.hibernate.map2.Courses"></mapping> <mapping class="cgginterns.hibernate.map3.Employee"></mapping> 
			<mapping class="cgginterns.hibernate.map3.Projects"></mapping> -->
		<mapping resource="cgg/hibernate/xmlmapping/Person.hbm.xml"/>
		<mapping resource="cgg/hibernate/xmlmapping/empdept/Employee.hbm.xml"/>
		<mapping resource="cgg/hibernate/xmlmapping/empdept/Department.hbm.xml"/>
	</session-factory>


</hibernate-configuration>